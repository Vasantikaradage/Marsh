<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/top_up_bg_50">

    <RelativeLayout
        android:id="@+id/delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/material_size_12"
        android:layout_weight="3"
        android:baselineAligned="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView

            android:id="@+id/delete_icon"
            android:layout_width="@dimen/material_size_24"
            android:layout_height="@dimen/material_size_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/material_size_24"
            android:src="@drawable/delete" />

        <TextView
            android:id="@+id/delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/delete_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/material_size_6"
            android:layout_marginEnd="@dimen/material_size_12"
            android:layout_marginBottom="@dimen/material_size_12"
            android:fontFamily="@font/montserratbold"
            android:text="Delete"
            android:textColor="@color/red" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>