<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgTitle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:contentDescription="icons for walkthrough"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/backgrounds/scenic[6]" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgTitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/setpoppins_medium"
        android:gravity="center"
        android:text="Enroll"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
        android:textColor="@color/icon_color"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detailtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginHorizontal="@dimen/material_size_12"
        android:layout_marginVertical="@dimen/material_size_8"
        android:fontFamily="@font/setpoppins_medium"
        android:gravity="center"
        android:paddingHorizontal="18dp"
        android:textColor="@color/light_black"
        android:textSize="17sp"
        tools:text="@tools:sample/lorem/random" />


</RelativeLayout>
