<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OtpTextView">
        <attr name="android:textColor"/>
        <attr name="otp" format="string"/>
        <attr name="hide_otp" format="boolean"/>
        <attr name="hide_otp_drawable" format="reference"/>
        <attr name="length" format="integer"/>
        <attr name="width" format="dimension"/>
        <attr name="height" format="dimension"/>
        <attr name="box_margin" format="dimension"/>
        <attr name="box_margin_left" format="dimension"/>
        <attr name="box_margin_right" format="dimension"/>
        <attr name="box_margin_top" format="dimension"/>
        <attr name="box_margin_bottom" format="dimension"/>
        <attr name="bar_height" format="dimension"/>
        <attr name="bar_enabled" format="boolean"/>
        <attr name="otp_box_background" format="reference"/>
        <attr name="otp_box_background_active" format="reference"/>
        <attr name="otp_box_background_inactive" format="reference"/>
        <attr name="otp_box_background_success" format="reference"/>
        <attr name="otp_box_background_error" format="reference"/>
        <attr name="bar_margin" format="dimension"/>
        <attr name="bar_margin_bottom" format="dimension"/>
        <attr name="bar_margin_right" format="dimension"/>
        <attr name="bar_margin_left" format="dimension"/>
        <attr name="bar_margin_top" format="dimension"/>
        <attr name="otp_text_size" format="dimension"/>
        <attr name="bar_active_color" format="color"/>
        <attr name="bar_inactive_color" format="color"/>
        <attr name="bar_error_color" format="color"/>
        <attr name="bar_success_color" format="color"/>
        <attr name="text_typeface" format="string"/>
        <attr name="otp_box_match_parent" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StateProgressBar">

        <attr name="spb_stateBackgroundColor" format="color" />
        <attr name="spb_stateForegroundColor" format="color" />

        <attr name="spb_stateNumberBackgroundColor" format="color" />
        <attr name="spb_stateNumberForegroundColor" format="color" />

        <attr name="spb_currentStateDescriptionColor" format="color" />
        <attr name="spb_stateDescriptionColor" format="color" />

        <attr name="spb_stateSize" format="dimension" />

        <attr name="spb_stateTextSize" format="dimension" />

        <attr name="spb_stateDescriptionSize" format="dimension" />

        <attr name="spb_stateLineThickness" format="dimension" />

        <attr name="spb_checkStateCompleted" format="boolean" />

        <attr name="spb_stateNumberIsDescending" format="boolean" />

        <attr name="spb_animateToCurrentProgressState" format="boolean" />

        <attr name="spb_enableAllStatesCompleted" format="boolean" />

        <attr name="spb_descriptionTopSpaceDecrementer" format="dimension" />

        <attr name="spb_descriptionTopSpaceIncrementer" format="dimension" />

        <attr name="spb_animationDuration" format="integer" />

        <attr name="spb_animationStartDelay" format="integer" />

        <attr name="spb_justifyMultilineDescription" format="boolean" />

        <attr name="spb_descriptionLinesSpacing" format="dimension" />

        <attr name="spb_maxDescriptionLines" format="integer" />


        <attr name="spb_currentStateNumber" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
        </attr>


        <attr name="spb_maxStateNumber" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
        </attr>

    </declare-styleable>
</resources>