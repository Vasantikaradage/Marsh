<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MB360" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/icon_color</item>
        <item name="colorPrimaryVariant">@color/gradient_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_start</item>
        <item name="colorSecondaryVariant">@color/gradient_start</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/icon_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MB360.error" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="summary_amount" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserratbold</item>
    </style>


    <style name="Enroll_Button_theme3" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">#0000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">#a4f700</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="shapeAppearance">@style/ConfirmShape</item>
    </style>

    <style name="App_font_toolBar">
        <item name="android:fontFamily">@font/setpoppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--For splash screen!-->
    <style name="Theme.MB360.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/marsh_back
        </item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <!--  <item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi">
              @drawable/ic_marsh_grey_logo
          </item>-->
        <item name="postSplashScreenTheme">@style/Theme.MB360</item>

    </style>

    <style name="ConfirmShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="summary_button" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/cpb_black</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserratbold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextViewAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@drawable/edittext_selector</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/gradient_start</item>
    </style>

    <style name="BottomNavigationViewTextStyleInactive" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/setpoppins</item>
        <item name="android:textColor">@color/grey1</item>
    </style>
</resources>